{
    "python.analysis.typeCheckingMode": "basic",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "mypy.runUsingActiveInterpreter": true,
    "mypy.targets": [
        "src"
    ],
    "isort.check": true,
    "isort.args": ["--profile", "black"],
    "isort.severity": {
        "W": "Error",
        "E": "Error"
    }
}